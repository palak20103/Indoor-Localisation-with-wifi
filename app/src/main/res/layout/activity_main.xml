<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity2">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:id="@+id/img1"
        ></ImageView>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:src="@drawable/head1"
    android:scaleType="centerCrop"
    android:id="@+id/headimg"
    ></ImageView>
<ImageButton
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:scaleType="centerCrop"
    android:id="@+id/scanimgbtn"
    android:alpha="0.7"
    android:src="@drawable/scanimg"
    android:layout_below="@id/headimg"
    />
<ImageButton
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:scaleType="centerCrop"
    android:alpha="0.7"
    android:src="@drawable/plotimg"
    android:layout_below="@id/headimg"
    android:id="@+id/plotimgbtn"
    android:layout_alignParentRight="true"

    />
<ImageButton
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:scaleType="centerCrop"
    android:alpha="0.7"
    android:src="@drawable/trainimg"
    android:id="@+id/trainimgbtn"
    android:layout_below="@id/scanimgbtn" />
<ImageButton
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:scaleType="centerCrop"
    android:alpha="0.7"
    android:src="@drawable/tstimg"
    android:id="@+id/tstimgbtn"
    android:layout_alignParentRight="true"
    android:layout_below="@id/plotimgbtn" />
<ImageButton
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:scaleType="centerCrop"
    android:alpha="0.7"
    android:id="@+id/knnimgbtn"
    android:layout_below="@id/trainimgbtn"
    android:src="@drawable/knn"
    />
</RelativeLayout>